<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:merchant="com.cp.model.merchant.*"
				autoDrawBackground="false"
				>

	<fx:Declarations>
		<merchant:MerchantVo id="merchant" />
	</fx:Declarations>

	<fx:Binding source="data as MerchantVo"
				destination="merchant"
				/>

	<s:SkinnableContainer right="{count.width/2}"
						  top="{count.height/2}"
						  styleName="graphic shadowedWhiteBackground"
						  >
		<s:Image width="200"
				 height="200"
				 left="10"
				 right="10"
				 top="10"
				 bottom="10"
				 source="{merchant.logo}"
				 />
	</s:SkinnableContainer>

	<s:Image id="count"
			 right="0"
			 source="@Embed('/asset/resource.swf#gradientBlackCircle')"
			 />

</s:ItemRenderer>
