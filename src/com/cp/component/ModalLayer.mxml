<?xml version="1.0" encoding="utf-8"?>
<s:Rect xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx"
		width="100%"
		height="100%"
		alpha="0.7"
		>

	<fx:Declarations>
		<fx:Object id="color">0x000000</fx:Object>
		<fx:Number id="blur">0</fx:Number>
	</fx:Declarations>

	<s:fill>
		<s:SolidColor color="{color}" />
	</s:fill>
	<s:filters>
		<s:BlurFilter blurX="{blur}"
					  blurY="{blur}"
					  />
	</s:filters>
</s:Rect>
