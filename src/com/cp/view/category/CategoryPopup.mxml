<?xml version="1.0" encoding="utf-8"?>
<popup:PopUpWrapperBase xmlns:fx="http://ns.adobe.com/mxml/2009"
						xmlns:popup="com.cp.component.*"
						xmlns:s="library://ns.adobe.com/flex/spark"
						xmlns:common="com.cp.component.common.*"
						xmlns:model="com.cp.model.category.*"
						xmlns:util="com.cp.util.*"
						xmlns:category="com.cp.view.category.*"
						center="false"
						>

	<fx:Declarations>
		<fx:Number id="top">90</fx:Number>
		<fx:Number id="right">400</fx:Number>


		<s:ArrayList id="categoryList">
			<model:CategoryVo name="Dinning"
							  icon="/asset/resource.swf#cupGraphic"
							  />
			<model:CategoryVo name="Pets"
							  icon="/asset/resource.swf#rabbitGraphic"
							  />
			<model:CategoryVo name="Automovie"
							  icon="/asset/resource.swf#cinemaGraphic"
							  />
			<model:CategoryVo name="Entertainment"
							  icon="/asset/resource.swf#headPhoneGraphic"
							  />
			<model:CategoryVo name="Beauty"
							  icon="/asset/resource.swf#dressGraphic"
							  />
			<model:CategoryVo name="Travel"
							  icon="/asset/resource.swf#towerGraphic"
							  />
			<model:CategoryVo name="Travel"
							  icon="/asset/resource.swf#towerGraphic"
							  />
			<model:CategoryVo name="Dinning"
							  icon="/asset/resource.swf#cupGraphic"
							  />
			<model:CategoryVo name="Pets"
							  icon="/asset/resource.swf#rabbitGraphic"
							  />
			<model:CategoryVo name="Automovie"
							  icon="/asset/resource.swf#cinemaGraphic"
							  />
			<model:CategoryVo name="Entertainment"
							  icon="/asset/resource.swf#headPhoneGraphic"
							  />
			<model:CategoryVo name="Beauty"
							  icon="/asset/resource.swf#dressGraphic"
							  />
			<model:CategoryVo name="Travel"
							  icon="/asset/resource.swf#towerGraphic"
							  />
		</s:ArrayList>

		<!--
		<util:PagedListCollectionView id="pagedCategories"
									  pageSize="6"
									  list="{categories}"
									  />

		<util:PageList id="pages"
					   pagedList="{pagedCategories}"
					   />
		-->
	</fx:Declarations>

	<fx:Script>
		<![CDATA[
			import com.cp.event.ui.CategoryListEvent;

			import mx.core.UIComponent;

			public var dispatch:Function;

			public function show(event:CategoryListEvent):void
			{
				open = true;
			}

			public function hide(event:CategoryListEvent):void
			{
				open = false;
			}
		]]>
	</fx:Script>

	<s:Group width="{UIComponent(parent).width}"
			 height="{UIComponent(parent).height}"
			 >
		<popup:ModalLayer height="1000"
						  bottom="0"
						  />

		<category:CategoryList id="content"
							   left="90"
							   right="{right}"
							   top="{top}"
							   bottom="80"
							   categoryList="{categoryList}"
							   selectCategory="dispatch(event)"
							   />

		<common:PopupCloseButton horizontalCenter="{UIComponent(parent).width/2 - right}"
								 verticalCenter="{-UIComponent(parent).height/2 + top}"
								 touchTap="open = false"
								 />

	</s:Group>
</popup:PopUpWrapperBase>
