<?xml version="1.0" encoding="utf-8"?>
<popup:PopUpWrapperBase xmlns:fx="http://ns.adobe.com/mxml/2009"
						xmlns:popup="com.cp.component.*"
						xmlns:s="library://ns.adobe.com/flex/spark"
						xmlns:common="com.cp.component.common.*"
						xmlns:category="com.cp.model.category.*"
						xmlns:util="com.cp.util.*"
						xmlns:category1="com.cp.itemRenderer.category.*"
						xmlns:merchant="com.cp.model.merchant.*"
						center="false"
						>

	<fx:Declarations>
		<fx:Number id="top">90</fx:Number>
		<fx:Number id="right">400</fx:Number>


		<s:ArrayList id="merchantList">
			<merchant:MerchantVo name="Merchant 1" />
			<merchant:MerchantVo name="Merchant 2" />
			<merchant:MerchantVo name="Merchant 3" />
			<merchant:MerchantVo name="Merchant 4" />
			<merchant:MerchantVo name="Merchant 5" />
			<merchant:MerchantVo name="Merchant 6" />
			<merchant:MerchantVo name="Merchant 7" />
			<merchant:MerchantVo name="Merchant 8" />
			<merchant:MerchantVo name="Merchant 9" />
		</s:ArrayList>
	</fx:Declarations>

	<fx:Script>
		<![CDATA[
			import com.cp.event.ui.MerchantListEvent;

			import mx.core.UIComponent;

			public function show(event:MerchantListEvent):void
			{
				open = true;
			}
		]]>
	</fx:Script>

	<s:Group width="{UIComponent(parent).width}"
			 height="{UIComponent(parent).height}"
			 >
		<popup:ModalLayer height="1000"
						  bottom="0"
						  color="0x000000"
						  alpha="0.7"
						  />

		<s:SkinnableContainer id="content"
							  left="90"
							  right="{right}"
							  top="{top}"
							  bottom="80"
							  styleName="graphic scale grayBackground"
							  >
			<s:layout>
				<s:VerticalLayout horizontalAlign="center"
								  paddingBottom="90"
								  paddingLeft="130"
								  paddingRight="130"
								  paddingTop="90"
								  gap="50"
								  />
			</s:layout>


			<s:Scroller width="100%"
						height="100%"
						interactionMode="touch"
						skinClass="com.cp.skin.common.NoBarScroller"
						>
				<s:DataGroup height="100%"
							 dataProvider="{merchantList}"
							 itemRenderer="com.cp.itemRenderer.merchant.MerchantItemRenderer"
							 >
					<s:layout>
						<s:TileLayout horizontalGap="120"
									  paddingTop="10"
									  verticalGap="60"
									  orientation="columns"
									  requestedColumnCount="3"
									  requestedRowCount="2"
									  />
					</s:layout>
				</s:DataGroup>
			</s:Scroller>

			<!--
			<s:List dataProvider="{pages}"
					selectedIndex="{pages.selectedIndex}"
					skinClass="com.cp.skin.common.PageListSkin"
					/>
			-->
		</s:SkinnableContainer>

		<common:PopupCloseButton horizontalCenter="{UIComponent(parent).width/2 - right}"
								 verticalCenter="{-UIComponent(parent).height/2 + top}"
								 touchTap="open = false"
								 />

	</s:Group>
</popup:PopUpWrapperBase>
