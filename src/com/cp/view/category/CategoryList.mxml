<?xml version="1.0" encoding="utf-8"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  xmlns:category="com.cp.model.category.*"
		  xmlns:util="com.cp.util.*"
		  gap="50"
		  >
	<fx:Declarations>
		<s:ArrayCollection id="categories">
			<category:CategoryVo name="Dinning"
								 icon="@Embed('/asset/resource.swf#cupGraphic')"
								 />
			<category:CategoryVo name="Pets"
								 icon="@Embed('/asset/resource.swf#rabbitGraphic')"
								 />
			<category:CategoryVo name="Automovie"
								 icon="@Embed('/asset/resource.swf#cinemaGraphic')"
								 />
			<category:CategoryVo name="Entertainment"
								 icon="@Embed('/asset/resource.swf#headPhoneGraphic')"
								 />
			<category:CategoryVo name="Beauty"
								 icon="@Embed('/asset/resource.swf#dressGraphic')"
								 />
			<category:CategoryVo name="Travel"
								 icon="@Embed('/asset/resource.swf#towerGraphic')"
								 />
			<category:CategoryVo name="Travel"
								 icon="@Embed('/asset/resource.swf#towerGraphic')"
								 />
			<category:CategoryVo name="Dinning"
								 icon="@Embed('/asset/resource.swf#cupGraphic')"
								 />
			<category:CategoryVo name="Pets"
								 icon="@Embed('/asset/resource.swf#rabbitGraphic')"
								 />
			<category:CategoryVo name="Automovie"
								 icon="@Embed('/asset/resource.swf#cinemaGraphic')"
								 />
			<category:CategoryVo name="Entertainment"
								 icon="@Embed('/asset/resource.swf#headPhoneGraphic')"
								 />
			<category:CategoryVo name="Beauty"
								 icon="@Embed('/asset/resource.swf#dressGraphic')"
								 />
			<category:CategoryVo name="Travel"
								 icon="@Embed('/asset/resource.swf#towerGraphic')"
								 />
		</s:ArrayCollection>

		<util:PagedListCollectionView id="pagedCategories"
									  pageSize="6"
									  list="{categories}"
									  />
	</fx:Declarations>

	<s:DataGroup width="100%"
				 height="100%"
				 dataProvider="{pagedCategories}"
				 itemRenderer="com.cp.itemRenderer.category.CategoryItemRenderer"
				 >
		<s:layout>
			<s:TileLayout horizontalGap="120"
						  verticalGap="60"
						  orientation="columns"
						  requestedColumnCount="3"
						  requestedRowCount="2"
						  />
		</s:layout>
	</s:DataGroup>
</s:HGroup>
